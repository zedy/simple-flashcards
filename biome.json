{
  "root": true,
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!eas.json", "!.storybook/storybook.requires.ts", "!openapi"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":PACKAGE:", ":BLANK_LINE:", "@/**", ":BLANK_LINE:", "#*/**", ":BLANK_LINE:", ":PATH:"],
            "identifierOrder": "lexicographic"
          }
        }
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "useImportType": {
          "level": "error",
          "options": {
            "style": "auto"
          }
        }
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true,
    "formatWithErrors": true,
    "attributePosition": "multiline"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
